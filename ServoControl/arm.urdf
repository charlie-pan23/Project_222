<?xml version="1.0"?>
<robot name="chess_arm">

  <link name="base_link">
    <visual><geometry><cylinder length="0.05" radius="0.1"/></geometry></visual>
  </link>

  <joint name="s0_yaw" type="revolute">
    <parent link="base_link"/>
    <child link="link_s1"/>
    <origin xyz="0 0 0.07" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-1.57" upper="1.57" effort="1.0" velocity="1.0"/>
  </joint>

  <link name="link_s1"/>

  <joint name="s1_pitch" type="revolute">
    <parent link="link_s1"/>
    <child link="link_s2"/>
    <origin xyz="0.1 0.1 0.3" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="1.0" velocity="1.0"/>
  </joint>

  <link name="link_s2"/>

  <joint name="s2_pitch" type="revolute">
    <parent link="link_s2"/>
    <child link="link_s3"/>
    <origin xyz="0 0 0.15" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="1.0" velocity="1.0"/>
  </joint>

  <link name="link_s3"/>

  <joint name="s3_pitch" type="revolute">
    <parent link="link_s3"/>
    <child link="link_s4"/>
    <origin xyz="0 0 0.104" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="1.0" velocity="1.0"/>
  </joint>

  <link name="link_s4"/>

  <joint name="s4_roll" type="revolute">
    <parent link="link_s4"/>
    <child link="link_s5"/>
    <origin xyz="0 0.1 0" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="-1.57" upper="1.57" effort="1.0" velocity="1.0"/>
  </joint>

  <link name="link_s5"/>

  <joint name="s5_gripper" type="revolute">
    <parent link="link_s5"/>
    <child link="tool_tip"/>
    <origin xyz="0 0.02 -0.095" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="0.349" upper="0.785" effort="1.0" velocity="1.0"/>  <!-- 0.349 rad = 20 degrees, 0.785 rad = 45 degrees -->
  </joint>

  <link name="tool_tip"/>

</robot>
